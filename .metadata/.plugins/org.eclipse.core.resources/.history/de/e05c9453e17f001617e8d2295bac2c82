import java.util.Scanner;

public class Ejercicio2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		// Definir Scanner para la introduccion de valores
		
		Scanner sc=new Scanner(System.in);
		
		// Definir variable de Producto
		
		String varProducto;
		
		// Definir variable de Precio
		
		double varPrecio;
		
		// Definir variable de Cantidad
		
		double varCantidad;
		
		// Definir calculo
		
		double varCalculo;
		
		// Introducción de datos en las variables
		
		System.out.println("Introduce el Producto ");
		varProducto=sc.nextLine();
		System.out.print("Introduce el Precio ");
		varPrecio=sc.nextDouble();
		System.out.print("Introduce la Cantidad ");
		varCantidad=sc.nextDouble();
		
		// Introducción del calculo
		
		varCalculo=(varCantidad*varPrecio);
		
		// Definición del programa
		
		System.out.print(varCantidad+" Kg de "+varProducto+" son "+varCalculo+" €");
	}

}
